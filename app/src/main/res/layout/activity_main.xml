<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a62510.weidunproject.MainActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/薇盾图标"
        android:layout_centerHorizontal="true"
        android:text="薇盾科技"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <Button
        android:id="@+id/首界面登录按钮"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_below="@+id/首界面密码框"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_selector"
        android:text="登录"
        android:textColor="#1e1d1d"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="294dp" />

    <ImageView
        android:id="@+id/薇盾图标"
        android:layout_width="94dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Name"
        android:layout_marginTop="53dp"
        app:srcCompat="@drawable/weidun"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/首界面密码框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/密码"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/首界面注册按钮"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/首界面登录按钮"
        android:layout_below="@+id/首界面登录按钮"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_selector"
        android:text="注册"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="434dp" />

    <TextView
        android:id="@+id/账号"
        android:layout_width="74dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:text="账号:"
        android:textColor="#000000"
        android:textSize="26dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/首界面账号框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/首界面密码框"
        android:layout_centerVertical="true"
        android:ems="10"
        android:singleLine="true"
        android:hint="请输入账号" />

    <TextView
        android:id="@+id/密码"
        android:layout_width="71dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/账号"
        android:layout_below="@+id/账号"
        android:text="密码:"
        android:textColor="#000000"
        android:textSize="26dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="236dp" />



</RelativeLayout>
