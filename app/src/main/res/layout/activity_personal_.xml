<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a62510.weidunproject.Personal_Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/personal_imageView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/personal_imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/weidun" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/personal_imageView1">
        <Button
            android:id="@+id/personal_动态"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="我的动态"
            android:textColor="#000000"
            android:background="#d6d6d6"/>
        <Button
            android:id="@+id/personal_通知"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="我的通知"
            android:textColor="#000000"
            android:background="#d6d6d6"/>
    </LinearLayout>

</RelativeLayout>





