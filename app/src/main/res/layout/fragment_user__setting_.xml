<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a62510.weidunproject.User_Setting_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/third_first_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_姓名"
            android:layout_below="@+id/third_first_imageview"
            android:text="姓名:"
            android:textSize="35dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_性别"
            android:layout_below="@+id/third_first_姓名"
            android:text="性别:"
            android:textSize="35dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_年龄"
            android:layout_below="@+id/third_first_性别"
            android:text="年龄:"
            android:textSize="35dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_个人简介"
            android:layout_below="@+id/third_first_年龄"
            android:text="个人简介:"
            android:textSize="35dp" />


        <!--信息如下-->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_edit_姓名"
            android:layout_below="@id/third_first_imageview"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/third_first_姓名"
            android:layout_alignBaseline="@id/third_first_姓名"
            android:textSize="35dp"
            android:singleLine="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_edit_性别"
            android:layout_below="@id/third_first_edit_姓名"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/third_first_性别"
            android:layout_alignBaseline="@id/third_first_性别"
            android:textSize="35dp"
            android:singleLine="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_edit_年龄"
            android:layout_below="@id/third_first_edit_性别"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/third_first_年龄"
            android:layout_alignBaseline="@id/third_first_年龄"
            android:textSize="35dp"
            android:singleLine="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_first_edit_个人简介"
            android:layout_below="@id/third_first_edit_性别"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/third_first_个人简介"
            android:layout_alignBaseline="@id/third_first_个人简介"
            android:textSize="35dp"
            android:singleLine="true"/>
    </RelativeLayout>

</FrameLayout>
